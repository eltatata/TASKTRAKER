generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Task {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  title       String @unique
  description String
  status      String
  priority    String
  uid         String

  @@map("tasks")
}
